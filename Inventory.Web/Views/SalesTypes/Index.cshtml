@using Inventory.Repository.Paging;
@using Inventory.ViewModel.Sales;
@model PagedResult<SalesTypeListViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-8">
        Add New Sales Type
        <a asp-action="Create" class="btn btn-primary">Add</a>
    </div>
    <div class="col-4"><partial name="_search" />.</div>
    <div class="row">
       <table class="table">
            <thead>
                <tr>
                    <th>
                        SalesType Id
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalesTypeId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalesTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a asp-route-id="@item.SalesTypeId" asp-action="Edit" class="btn btn-primary">Edit</a>
                            <a asp-route-id="@item.SalesTypeId" asp-action="Delete" class="btn btn-primary">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

